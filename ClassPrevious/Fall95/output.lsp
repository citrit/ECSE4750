(defun maketrian(filename / ofp ptlist cnt pt1)
  (setq ofp (open filename "a") cnt 0)
  (while (setq pt1 (getint "\nStart: "))
    (setq ptlist (cons pt1 ptlist))
    (setq pt1 (getstring "\nMiddle: "))
    (setq ptlist (cons pt1 ptlist))
    (setq pt1 (getstring "\nEnd: "))
    (setq ptlist (cons pt1 ptlist))
    )
  (setq ptlist (reverse ptlist))
  (princ (strcat "\n4   " (itoa (/ (length ptlist) 3)) "  0.0 1.0 1.0\n") ofp)
  (while (setq pt1 (nth cnt ptlist))
    (princ (itoa pt1) ofp)
    (princ (strcat " " (nth (+ 1 cnt) ptlist)) ofp)
    (princ (strcat " " (nth (+ 2 cnt) ptlist) "    ") ofp)
    (setq cnt (+ cnt 3))
    )
  (close ofp)
)