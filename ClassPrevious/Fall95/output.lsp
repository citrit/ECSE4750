
(defun makepts(filename / ofp ptlist cnt pt1)
  (setq ofp (open filename "a") cnt 0)
  (while (setq pt1 (getpoint "\nPoints: "))
    (setq ptlist (cons pt1 ptlist))
    )
  (princ (strcat "\n0   " (itoa (length ptlist)) "  1.0 1.0 1.0\n") ofp)
  (setq ptlist (reverse ptlist))
  (while (setq pt1 (nth cnt ptlist))
    (princ (car pt1) ofp)(princ " " ofp)
    (princ (cadr pt1) ofp)(princ " " ofp)
    (princ (caddr pt1) ofp)(princ "    " ofp)
    (setq cnt (+ cnt 1))
    )
  (close ofp)
)
